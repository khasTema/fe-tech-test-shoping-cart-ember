{{page-title "Checkout"}}

<div class="backit w-11/12 mx-auto mt-7 mb-5">
    <LinkTo @route="products" class="flex justify-start items-center">
        <img src="/icons/chevron-left.png" alt="back">
        Continue shopping
    </LinkTo>
</div>

<Jumbo>
    <Heading>Shopping Cart</Heading>
    <SubHeading>You have {{4}} items in your cart.</SubHeading>
</Jumbo>

<main class="w-11/12 flex flex-wrap my-0 mx-auto justify-start">
    <div class="name-products-list custom-min-width-320 w-7/12 flex flex-col justify-between items-center mr-8">
        <CartProduct @product={{product}}/>
        <CartProduct @product={{product}}/>
        <CartProduct @product={{product}}/>
    </div>
    <div class="name-checkout-list w-4/12 custom-min-width-365">
        <CartCheckList />
    </div>
</main>